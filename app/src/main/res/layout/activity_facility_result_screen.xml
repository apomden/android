<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".FindYourFacilityScreen">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To Facilty Name"
            android:id="@+id/textAbove"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="35dp"
            android:padding="10dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageDisplay"
            android:src="@drawable/bar"
            android:paddingBottom="20dp"
            android:layout_alignRight="@+id/textAbove"
            android:layout_alignEnd="@+id/textAbove"
            android:layout_below="@+id/textAbove"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Facility"
            android:id="@+id/btnFindFacility"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/custom_button"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageDisplay"
            android:layout_alignEnd="@+id/imageDisplay"
            android:layout_below="@+id/imageDisplay"
            />


    </RelativeLayout>

</ScrollView>