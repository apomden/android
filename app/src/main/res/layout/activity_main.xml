<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:id="@+id/imageDisplay"
            android:src="@drawable/bar"
            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Email"
            android:padding="15dp"

            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"

            android:background="@drawable/rect_text_edit_white"
            android:paddingBottom="15dp"
            android:ems="10"
            android:id="@+id/personName"
            android:layout_below="@+id/imageDisplay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:padding="15dp"

            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"

            android:background="@drawable/rect_text_edit_white"
            android:paddingBottom="15dp"
            android:ems="10"
            android:layout_below="@+id/personName"
            android:id="@+id/personEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnSendReport"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/custom_button"
            android:textSize="20sp"
            android:paddingTop="2dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/personEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/personEmail"
            android:layout_alignEnd="@+id/personEmail"
            />


    </RelativeLayout>
</ScrollView>